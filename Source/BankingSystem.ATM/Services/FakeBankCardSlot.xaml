        <Label Content="Select a bank card here" FontSize="12" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <Label Content="PIN code for all cards is 0000" FontSize="12" HorizontalAlignment="Left" Margin="0,25,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10, 60, 10, 10"></ListBox>

    </Grid>
